{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Ruff Formatter",
            "command": "ruff",
            "args": [
                "format"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true,
                "echo": true,
                "focus": false,
                "panel": "dedicated",
                "reveal": "always",
                "showReuseMessage": true
            },
            "type": "shell"
        },
        {
            "label": "Run Ruff Linter",
            "command": "ruff",
            "args": [
                "check",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true,
                "echo": true,
                "focus": false,
                "panel": "dedicated",
                "reveal": "always",
                "showReuseMessage": true,
            },
            "type": "shell"
        },
        {
            "label": "Run Pylint",
            "command": "pylint",
            "args": [
                "guidata"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true,
                "echo": true,
                "focus": false,
                "panel": "dedicated",
                "reveal": "always",
                "showReuseMessage": true
            },
            "type": "shell"
        },
        {
            "label": "gettext - Scan",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "gettext.bat",
                "rescan"
            ],
            "options": {
                "cwd": "scripts",
                "env": {
                    "UNATTENDED": "1",
                    "PYTHONUTF8": "1",
                    "PYTHON": "${command:python.interpreterPath}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "gettext - Compile",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "gettext.bat",
                "compile"
            ],
            "options": {
                "cwd": "scripts",
                "env": {
                    "UNATTENDED": "1",
                    "PYTHON": "${command:python.interpreterPath}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run pytest",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "run_pytest.bat"
            ],
            "options": {
                "cwd": "scripts",
                "env": {
                    "UNATTENDED": "1",
                    "PYTHON": "${command:python.interpreterPath}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Update requirements.txt",
            "command": "toml-to-req",
            "args": [
                "--toml-file",
                "pyproject.toml",
                "--optional-lists",
                "dev,doc,test",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "clear": true,
                "echo": true,
                "focus": false,
                "panel": "dedicated",
                "reveal": "always",
                "showReuseMessage": true,
            },
            "type": "shell"
        },
        {
            "label": "Run Coverage",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "run_coverage.bat"
            ],
            "options": {
                "cwd": "scripts",
                "env": {
                    "UNATTENDED": "1",
                    "PYTHON": "${command:python.interpreterPath}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Clean Up",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "clean_up.bat"
            ],
            "options": {
                "cwd": "scripts"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Upgrade environment",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "upgrade_env.bat"
            ],
            "options": {
                "cwd": "scripts",
                "env": {
                    "UNATTENDED": "1",
                    "PYTHON": "${command:python.interpreterPath}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build documentation",
            "type": "shell",
            "command": "cmd",
            "options": {
                "cwd": "scripts",
                "env": {
                    "PYTHON": "${command:python.interpreterPath}",
                    "UNATTENDED": "1"
                }
            },
            "args": [
                "/c",
                "build_doc.bat"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Build Python packages",
            "type": "shell",
            "command": "cmd",
            "options": {
                "cwd": "scripts",
                "env": {
                    "PYTHON": "${command:python.interpreterPath}",
                    "UNATTENDED": "1"
                }
            },
            "args": [
                "/c",
                "build_dist.bat"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean Up",
            ]
        },
    ]
}